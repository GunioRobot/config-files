startup_message off
escape ^Ll # Don't like ctrl-a so now it's ctrl-l
termcapinfo xterm|xterms|xs|rxvt ti@:te@ # Give mouse scrolling
#caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= %1` %m/%d/%y %C:%s%a"
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= %1` %m/%d/%y %C:%a"
defscrollback 5000
setenv SSH_AUTH_SOCK $HOME/.ssh/.screen-ssh-agent
screen -t bash 0 ssh-agent -a $SSH_AUTH_SOCK $SHELL
screen -t bash 1 ssh-add
